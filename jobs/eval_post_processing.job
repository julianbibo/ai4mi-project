#!/bin/bash

#SBATCH --partition=gpu_h100
#SBATCH --gpus=1
#SBATCH --job-name=EvalPostFunctions
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=9
#SBATCH --time=01:00:00
#SBATCH --output=slurm_output_%A.out

module purge
module load 2023
module load Anaconda3/2023.07-2

cd $HOME/AI4MI/distorch/

source activate ai4mi

srun python compute_metrics.py \
  --ref_folder ./val/gt \
  --pred_folder ./val/pred \
  --ref_extension .nii.gz \
  --pred_extension .nii.gz \
  --num_classes 5 \
  --metrics 3d_dice 3d_hd95 \
  --save_folder ./resultss/baseline

srun python compute_metrics.py \
  --ref_folder ./val/gt \
  --pred_folder ./val/stitch_outputs_opening \
  --ref_extension .nii.gz \
  --pred_extension .nii.gz \
  --num_classes 5 \
  --metrics 3d_dice 3d_hd95 \
  --save_folder ./resultss/results_opening

srun python compute_metrics.py \
  --ref_folder ./val/gt \
  --pred_folder ./val/stitch_outputs_closing \
  --ref_extension .nii.gz \
  --pred_extension .nii.gz \
  --num_classes 5 \
  --metrics 3d_dice 3d_hd95 \
  --save_folder ./resultss/results_closing

  srun python compute_metrics.py \
  --ref_folder ./val/gt \
  --pred_folder ./val/stitch_outputs_gaussiansmoothing \
  --ref_extension .nii.gz \
  --pred_extension .nii.gz \
  --num_classes 5 \
  --metrics 3d_dice 3d_hd95 \
  --save_folder ./resultss/results_gaussiansmoothing